       <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 2xl:grid-cols-6 gap-6 px-4 pb-10">
        <% book.map((el, i) => { %>
          <div class="bg-white rounded-2xl shadow-lg shadow-gray-600 transition duration-300">
            <!-- Image Box -->
            <div class="h-60 overflow-hidden rounded-t-2xl">
              <img 
                src="<%=el.image%>" 
                alt="Book Cover" 
                class="w-full h-full object-cover"
              />
            </div>
      
            <!-- Book Info -->
            <div class="p-4 space-y-2">
              <h3 class="text-lg font-semibold"><%=el.name%></h3>
              <h6 class="text-sm text-gray-600">Author: <%=el.author%></h6>
              <p class="text-sm">Type: <%=el.type%></p>
              <p class="text-sm font-semibold">Price: ₹<%=el.price%></p>
      
              <!-- Buttons -->
              <div class="flex space-x-2 mt-3">
                <a href="/editData?id=<%=el.id%>" class="flex-1">
                  <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-1.5 rounded-md text-sm">Edit</button>
                </a>
                <a href="/deleteData?id=<%=el.id%>" class="flex-1">
                  <button class="w-full bg-red-600 hover:bg-red-700 text-white py-1.5 rounded-md text-sm">Delete</button>
                </a>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
      
